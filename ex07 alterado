#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <locale.h>

typedef struct{
    char nome [30];
    float n1,n2,media,acima,baixo;
    
}faluno;

int compMedia(const void *fa,const void *fb){
    faluno a = *(faluno*)fa;
    faluno b = *(faluno*)fb;
    return ( b.media-a.media );
}

int main(void) {
    setlocale(LC_ALL, "Portuguese");
    faluno alunos[100];
    falunos mediaacima[100];
    int n,i;
    double mediat;
    printf("quantos alunos s√£o: ");
    scanf("%d", &n);
    for(i=0;i<n;i++){
        setbuf(stdin,NULL);
        printf("nome do aluno(a):");
        //scanf("%s",  alunos[i].nome);
        gets(alunos[i].nome);
        printf("nota1: ");
        scanf("%f", &alunos[i].n1);
        printf("nota2: ");
        scanf("%f", &alunos[i].n2);
        setbuf(stdin,NULL);
    }
      for(i=0;i<n;i++){
          alunos[i].media=((alunos[i].n1+(2*alunos[i].n2))/3);
          mediat+=alunos[i].media/n;
      }
      qsort(alunos, n, sizeof(faluno), compMedia);
     for(i=0;i<n;i++) printf("%-20s %05.2f %05.2f %05.2f %05.2lf\n", alunos[i].nome, alunos[i].n1, alunos[i].n2,alunos[i].acima ,mediat);
    
    
    return 0;
}
